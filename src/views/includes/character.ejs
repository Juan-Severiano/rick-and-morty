<ul class="list-characters d-flex flex-wrap align-items-center justify-content-center">
    <% characters.forEach((character)=> { %>
        <li class="character d-flex flex-row">
            <img src="<%= character.image %>" alt="<%= character.name %>">
            <div class="card">
                <h2>
                    <%= character.name %>
                </h2>
                <p class="d-flex align-items-center">
                    <% if (character.status === 'Dead' ) { %>
                        <i class="bi bi-circle-fill" style="color: red;"></i>
                    <% } else if (character.status === 'Alive') { %>
                        <i class="bi bi-circle-fill" style="color: green;"></i>
                    <% } else { %>
                        <i class="bi bi-circle-fill" style="color: #4d4d4d;"></i>
                    <% } %>
                                <%= character.status %> - <%= character.species %>
                </p>
                <p class="disable">Last known location:</p>
                <p><a href="" class="character-links">
                        <%= character.location.name %>
                    </a></p>
                <p class="disable">First seen:</p>
                <p><a href="" class="character-links">
                        <%= character.firstEpisodeName %>
                    </a></p>
            </div>
        </li>
        <% }) %>
</ul>